.info
  margin-left 600px
  padding-top 182px
  @media only screen and (max-width 1242px)
    padding 0
    width 600px
    margin 0 auto
  @media only screen and (max-width 640px)
    width 90%
  &__header
    text-transform uppercase
    font-size 30px
    color white
    padding-left 32px
    line-height 36px
  &__content
    font-size 18px
    color white
    width 523px
    margin 26px 0 0 32px
    line-height 22px
    @media only screen and (max-width 1242px)
      margin 26px 0 20px 32px
    @media only screen and (max-width 640px)
      width 80%
  &__button
    margin 55px 0 0 366px
    @media only screen and (max-width 1242px)
      width 166px
    & a
      &:link
        display block
        font-size 18px
        padding 15px 0 0 22px
        height 38px
        width 144px
        background-color #04e4a2
        text-decoration none
        text-transform uppercase
        border-radius 6px
        color white
      &:visited
        color white
      &:hover
        color #04e4a2
        background-color white