html
  font-size 16px
  color black
  background-color white
  font-family Helvetica, Arial, sans-serif
  height 100%

body
  margin 0 0 40px 0
  height 100%

.main
  min-height calc(100vh - 80px) //для прибития футера к низу

.layout-positioner
  width 100%
  margin 0 auto
  @media only screen and (min-width 1242px)
    width 1200px

.wrapper
  width 515px
  margin 0 auto
  @media only screen and (min-width 1242px)
    width auto

.content
  padding 20px 0 20px 0
  background-color #ef5350
  @media only screen and (min-width 1242px)
    min-height 583px
    padding 0
  &__phone-container
    display none
    @media only screen and (min-width 1242px)
      display block
      float left
      width 502px
      height 583px
